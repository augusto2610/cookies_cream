<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.AutosizingTextViewActivity">

    <TextView
        android:id="@+id/granular_autosize_textview"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="AAAAA"
        android:textSize="100sp"
        android:maxLines="1"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="10dp"
        android:autoSizeMaxTextSize="100dp"
        android:autoSizeStepGranularity="2dp"/>

    <TextView
        android:id="@+id/preset_autosize_textview"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textSize="100sp"
        android:text="BBBBB"
        android:maxLines="1"
        android:autoSizeTextType="uniform"
        android:autoSizePresetSizes="@array/autosize"/>
    
    <Button
        android:id="@+id/add_text_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar letras"/>

    <Button
        android:id="@+id/remove_text_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quitar letras"/>


</LinearLayout>