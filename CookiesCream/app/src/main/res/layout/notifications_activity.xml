<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/create_notification_channels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set up notification Channels"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>
    
    <Button
        android:id="@+id/send_low_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/create_notification_channels"
        android:layout_marginBottom="16dp"
        android:text="Send low importance notification"/>

    <Button
        android:id="@+id/send_medium_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/send_low_notification"
        android:text="Send medium importance notification"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/send_high_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/send_medium_notification"
        android:text="Send high importance notification"/>

</RelativeLayout>